    <string name="ui_hideIcon_description">你仍然可以从 Xposed Manager 进入模块设置</string>
    <string name="ui_debugMode">启用调试模式</string>
    <string name="ui_debugMode_description">启用后，会在 Xposed Manager 中打印重定向信息</string>


